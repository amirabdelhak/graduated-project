<!DOCTYPE html>
<html lang="en" dir="ltr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title - ShopSphere</title>

    <link rel="icon" href="~/assets/img/logo.png" type="image/png" />

    <!-- Fonts & Bootstrap & Icons -->
    <link href="https://fonts.googleapis.com/css2?family=Cairo:wght@400;600;700&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />

    <style>
        body {
            font-family: 'Cairo', sans-serif;
            background: url('/assets/img/cta-bg.jpg') no-repeat center center fixed;
            background-size: cover;
            color: #222;
            margin: 0;
            padding: 0;
        }

        .header {
            background-color: rgba(0, 0, 0, 0.85);
            backdrop-filter: blur(10px);
        }

        .topbar {
            background-color: rgba(0, 0, 0, 0.6);
            color: #fff;
            font-size: 0.9rem;
        }

            .topbar a,
            .navmenu a,
            .logo,
            .logo span,
            footer a {
                color: #ffffff;
                text-decoration: none;
                transition: all 0.3s ease;
                padding: 5px 10px;
                border-radius: 8px;
            }

                .topbar a:hover,
                .navmenu a:hover,
                .navmenu a.active,
                .logo:hover,
                .logo span:hover,
                footer a:hover {
                    color: #6b21a8 !important;
                    background-color: #f3e8ff;
                    text-decoration: none;
                    transform: scale(1.08);
                }

        .navmenu a {
            font-weight: 600;
        }

        .dropdown-menu {
            background-color: rgba(255, 255, 255, 0.95);
        }

            .dropdown-menu a {
                color: #222;
            }

                .dropdown-menu a:hover {
                    background-color: #6b46c1;
                    color: #fff;
                }

        .btn-purple {
            background-color: #6b46c1;
            color: white;
            border-radius: 50px;
        }

            .btn-purple:hover {
                background-color: #5936a5;
                box-shadow: 0 0 10px #6b46c1;
            }

        footer {
            background: #343a40;
            color: #fff;
            padding: 20px 0;
        }
    </style>
</head>
<body class="d-flex flex-column min-vh-100">

    <!-- Header -->
    <header class="header sticky-top shadow">

        <!-- Topbar -->
        <div class="topbar d-flex align-items-center py-1">
            <div class="container d-flex justify-content-center justify-content-md-between">
                <div class="contact-info d-flex align-items-center">
                    <i class="bi bi-envelope me-3"><a href="mailto:contact@example.com">contact@example.com</a></i>
                    <i class="bi bi-phone text-white"><span class="ms-3">+1 5589 55488 55</span></i>
                </div>
                <div class="social-links d-none d-md-flex align-items-center">
                    <a href="#"><i class="bi bi-twitter-x"></i></a>
                    <a href="#"><i class="bi bi-facebook"></i></a>
                    <a href="#"><i class="bi bi-instagram"></i></a>
                    <a href="#"><i class="bi bi-linkedin"></i></a>
                </div>
            </div>
        </div>

        <!-- Navbar -->
        <div class="branding d-flex align-items-center">
            <div class="container d-flex align-items-center justify-content-between py-2">
                <a href="/" class="nav-link d-flex align-items-center logo">
                    <img src="~/assets/img/logo.png" alt="Logo" style="height: 40px;" class="me-2" />
                    <span class="fw-bold fs-4">ShopSphere</span>
                </a>

                <nav class="navmenu">
                    <ul class="nav gap-3">
                        <li class="nav-item"><a class="nav-link" href="/Home/Index"><i class="bi bi-house-door"></i> Home</a></li>
                        <li class="nav-item"><a class="nav-link" href="/Products/getproducts"><i class="bi bi-box-seam"></i> Products</a></li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" data-bs-toggle="dropdown"><i class="bi bi-grid"></i> Categories</a>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" href="#">Electronics</a></li>
                                <li><a class="dropdown-item" href="#">Fashion</a></li>
                                <li><a class="dropdown-item" href="#">Home & Living</a></li>
                            </ul>
                        </li>
                        <li class="nav-item"><a class="nav-link" href="/Account/Login"><i class="bi bi-box-arrow-in-right"></i> Login</a></li>
                        <li class="nav-item"><a class="nav-link" href="/Account/Register"><i class="bi bi-person-plus"></i> Register</a></li>
                    </ul>
                </nav>
            </div>
        </div>
    </header>

    <!-- Main Content -->
    <main class="flex-grow-1 d-flex align-items-center justify-content-center py-5 px-3">
        <div class="w-100" style="max-width: 1200px;">
            @RenderBody()
        </div>
    </main>

    <!-- Footer -->
    <footer class="text-center mt-auto">
        <div class="container">
            <p class="mb-1">&copy; @DateTime.Now.Year - <strong>ShopSphere</strong>. All rights reserved.</p>
            <p class="mb-0">
                Crafted with ❤️ for our Graduation Project |
                <a href="#">Back to top</a> |
                <a href="#">Privacy Policy</a>
            </p>
        </div>
    </footer>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const currentPath = window.location.pathname.toLowerCase();
            const navLinks = document.querySelectorAll(".navmenu a.nav-link");

            navLinks.forEach(link => {
                const linkHref = link.getAttribute("href");
                if (!linkHref || linkHref.startsWith("#")) return;

                const linkPath = new URL(link.href).pathname.toLowerCase();
                if (linkPath === currentPath) {
                    link.classList.add("active");
                }
            });
        });
    </script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)

</body>
</html>
