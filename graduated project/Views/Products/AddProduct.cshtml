@model graduated_project.Models.Product

@{
    Layout = "_loginlayout";
    ViewData["Title"] = "Add New Product";
    SelectList x = new SelectList(ViewBag.categorys, "Id", "Name");
}
<h2 class="text-center mb-4">Add New Product</h2>

<form asp-action="AddProduct" enctype="multipart/form-data">
    <div class="mb-3">
        <label asp-for="Name" class="form-label">Product Name</label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Description" class="form-label">Description</label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Quantity" class="form-label">Quantity</label>
        <input asp-for="Quantity" class="form-control" />
        <span asp-validation-for="Quantity" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Pricebeforediscount" class="form-label">Price Before Discount</label>
        <input asp-for="Pricebeforediscount" class="form-control" />
        <span asp-validation-for="Pricebeforediscount" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Discount" class="form-label">Discount (%)</label>
        <input asp-for="Discount" class="form-control" />
        <span asp-validation-for="Discount" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Priceafterdiscount" class="form-label">Price After Discount</label>
        <input asp-for="Priceafterdiscount" class="form-control" />
        <span asp-validation-for="Priceafterdiscount" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Image" class="form-label">Product Image</label>
        <input asp-for="Image" type="file" class="form-control" />
        <span asp-validation-for="Image" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="CategoryId" class="form-label">Category</label>
        <select asp-for="CategoryId" class="form-select" asp-items="x">
            <option value="">-- Select Category --</option>
        </select>
        <span asp-validation-for="CategoryId" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-save">Save Product</button>
</form>


