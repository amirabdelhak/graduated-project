@model graduated_project.viewmodels.Rolevm

@{
    Layout = "_loginlayout";
    ViewData["Title"] = "Create Role";
}

<h2 class="text-center mb-4">Create Role</h2>

<form asp-action="Add" method="post" class="mx-auto" style="max-width: 400px;">
    <div class="mb-3">
        <label asp-for="name" class="form-label">Role Name</label>
        <input asp-for="name" class="form-control" />
        <span asp-validation-for="name" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-save w-100">Create</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}


