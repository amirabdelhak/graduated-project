@model IEnumerable<graduated_project.Models.Order>

@{
    ViewData["Title"] = "All Orders";
    Layout = "_mainlayout";
}

<h2>Orders</h2>

<table class="table table-bordered table-striped">
    <thead class="table-dark">
        <tr>
            <th>Order Date</th>
            <th>Shipping Address</th>
            <th>Total Price (EGP)</th>
            <th>User</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model)
        {
            <tr>
                <td>@order.OrderDate.ToString("dd/MM/yyyy hh:mm tt")</td>
                <td>@order.ShippingAddress</td>
                <td>@order.TotalPrice</td>
                <td>@order.User?.FirstName @order.User?.LastName</td>
                <td>
                    <a asp-action="Details" asp-route-id="@order.Id" class="btn btn-sm btn-primary">Details</a>
                    <a asp-action="Edit" asp-route-id="@order.Id" class="btn btn-sm btn-warning">Edit</a>
                    <a asp-action="Delete" asp-route-id="@order.Id" class="btn btn-sm btn-danger"
                       onclick="return confirm('Are you sure you want to delete this order?');">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
