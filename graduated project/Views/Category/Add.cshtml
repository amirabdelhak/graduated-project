@model graduated_project.Models.Category

@{
    Layout = "_loginlayout";
    ViewData["Title"] = "Add Category";
}

<h2 class="text-center mb-4 fw-bold text-dark">Add New Category</h2>

<form asp-action="Add" class="needs-validation" novalidate>
    <div asp-validation-summary="All" class="text-danger mb-3"></div>

    <div class="mb-3">
        <label asp-for="Name" class="form-label fw-semibold"></label>
        <input asp-for="Name" class="form-control" placeholder="Enter category name" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="d-grid">
        <button type="submit" class="btn-save">Create</button>
    </div>
</form>
