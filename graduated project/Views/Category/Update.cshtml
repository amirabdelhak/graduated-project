@model graduated_project.Models.Category

@{
    ViewData["Title"] = "Update";
    Layout = "_loginlayout";
}

<h2 class="text-center mb-4 fw-bold text-dark">Update Category</h2>

<div class="d-flex justify-content-center">
    <div class="form-container">
        <form asp-action="Update">
            <div asp-validation-summary="All" class="text-danger mb-3"></div>

            <input type="hidden" asp-for="Id" />

            <div class="mb-3">
                <label asp-for="Name" class="form-label fw-semibold"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="d-grid">
                <input type="submit" value="Save Changes" class="btn-save" />
            </div>
        </form>

        <div class="mt-3 text-center">
            <a asp-action="GetAll" class="text-decoration-none">
                <i class="bi bi-arrow-left"></i> Back to List
            </a>
        </div>
    </div>
</div>


