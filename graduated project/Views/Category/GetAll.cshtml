@model IEnumerable<graduated_project.Models.Category>

@{
    ViewData["Title"] = "All Categories";
    Layout = "_loginlayout";
}

<div class="container my-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold text-dark m-0"><i class="bi bi-list-ul me-2 text-purple"></i> All Categories</h2>
        <a asp-action="Add" class="btn btn-purple px-4 py-2">
            <i class="bi bi-plus-circle me-2"></i> Add Category
        </a>
    </div>

    <div class="table-responsive">
        <table class="table table-bordered table-hover align-middle bg-white shadow-sm rounded">
            <thead style="background-color: #6b21a8; color: white;" class="text-center">
                <tr>
                    <th style="width: 70%;">@Html.DisplayNameFor(model => model.First().Name)</th>
                    <th style="width: 30%;">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="ps-4">@Html.DisplayFor(modelItem => item.Name)</td>
                        <td class="text-center">
                            <a asp-action="Update" asp-route-id="@item.Id" class="btn btn-outline-purple btn-sm me-2">
                                <i class="bi bi-pencil-square"></i> Edit
                            </a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger btn-sm">
                                <i class="bi bi-trash"></i> Delete
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<style>
    .btn-purple {
        background-color: #6b21a8;
        color: white;
        border-radius: 8px;
        font-weight: 600;
        transition: background 0.3s ease;
    }

        .btn-purple:hover {
            background-color: #5a189a;
            color: #fff;
        }

    .btn-outline-purple {
        border: 2px solid #6b21a8;
        color: #6b21a8;
        font-weight: 500;
        transition: all 0.3s ease;
        border-radius: 6px;
    }

        .btn-outline-purple:hover {
            background-color: #f3e8ff;
            color: #4c1d95;
        }

    .text-purple {
        color: #6b21a8 !important;
    }
</style>
