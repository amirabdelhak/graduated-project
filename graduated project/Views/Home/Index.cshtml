@{
    ViewBag.Title = "Home";
    Layout = "_homelayout";
}

<section class="home-intro text-center bg-white bg-opacity-75 p-5 rounded-4 shadow-lg animate-fade-in">
    <h1 class="display-4 fw-bold text-indigo-800 mb-4">
        Welcome to <span class="text-purple-600">ShopSphere</span> 🛍️
    </h1>
    <p class="lead text-gray-700 mb-5">
        Discover amazing deals and explore top-quality products in every category — all in one place!
    </p>

    <div class="row g-3 justify-content-center text-start text-gray-800 mb-4">
        <div class="col-md-6 col-lg-4 d-flex"><span class="me-2 text-purple-500 fs-4">✔️</span> <span>Browse products by category</span></div>
        <div class="col-md-6 col-lg-4 d-flex"><span class="me-2 text-purple-500 fs-4">✔️</span> <span>Read reviews and ratings from real users</span></div>
        <div class="col-md-6 col-lg-4 d-flex"><span class="me-2 text-purple-500 fs-4">✔️</span> <span>Add items to your shopping cart easily</span></div>
        <div class="col-md-6 col-lg-4 d-flex"><span class="me-2 text-purple-500 fs-4">✔️</span> <span>Track your orders and shipment status</span></div>
        <div class="col-md-6 col-lg-4 d-flex"><span class="me-2 text-purple-500 fs-4">✔️</span> <span>Leave reviews and share your experience</span></div>
    </div>

    <p class="text-muted mb-4">Ready to start your journey? Let’s shop smart, stylish, and safe!</p>
    <a href="/Products/getproducts" class="btn btn-lg btn-purple px-5 py-3 shadow-sm">
        🚀 Get Started
    </a>
</section>

